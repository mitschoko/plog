.post.container
  - var post = post.value || post ;
  .posthead.row
    .span6
      p= post.user
    .span6
      p= post.time
    - var smile = (post.value && post.value.smile) || post.smile ;
  .postbody.row
    - var smile = post.smile;
    .span5
      include smile
    - if ( typeof smile.text !== 'undefined' )
      .speak.span7
         svg.arrow
           polyline( stroke="black", stroke-width=2, fill="white", points="63,40 0,0 63,60")
         .bubble= smile.text
